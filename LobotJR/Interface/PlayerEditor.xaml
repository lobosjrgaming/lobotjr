<Window x:Class="LobotJR.Interface.PlayerEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LobotJR.Interface"
        mc:Ignorable="d"
        Title="Player Editor" Height="350" Width="600">
    <Grid Margin="5,5,5,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="SearchText" Grid.ColumnSpan="5"/>
        <Button x:Name="SearchButton" Grid.Column="5" Margin="5,0,0,0" Content="Search"/>
        <Label Grid.Row="1" Content="Username" HorizontalAlignment="Right"/>
        <TextBox x:Name="Username" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" VerticalAlignment="Center"/>
        <Label Grid.Row="2" Content="Twitch ID" HorizontalAlignment="Right"/>
        <TextBox x:Name="TwitchId" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" VerticalAlignment="Center"/>
        <Label Grid.Row="3" Content="Admin" HorizontalAlignment="Center"/>
        <CheckBox x:Name="IsAdmin" Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Label Grid.Row="3" Grid.Column="1" Content="Mod" HorizontalAlignment="Center"/>
        <CheckBox x:Name="IsMod" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Label Grid.Row="3" Grid.Column="2" Content="VIP" HorizontalAlignment="Center"/>
        <CheckBox x:Name="IsVip" Grid.Row="4" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Label Grid.Row="3" Grid.Column="3" Content="Sub" HorizontalAlignment="Center"/>
        <CheckBox x:Name="IsSub" Grid.Row="4" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Label Grid.Row="5" Content="Class" HorizontalAlignment="Right"/>
        <ComboBox x:Name="CharacterClass" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="3" VerticalAlignment="Center"/>
        <Label Grid.Row="6" Content="Level" HorizontalAlignment="Right"/>
        <TextBox x:Name="Level" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="3" VerticalAlignment="Center"/>
        <Label Grid.Row="7" Content="Prestige" HorizontalAlignment="Right"/>
        <TextBox x:Name="Prestige" Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="3" VerticalAlignment="Center"/>
        <Label Grid.Row="8" Content="XP" HorizontalAlignment="Right"/>
        <TextBox x:Name="Experience" Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="3" VerticalAlignment="Center"/>
        <Label Grid.Row="9" Content="Wolfcoins" HorizontalAlignment="Right"/>
        <TextBox x:Name="Wolfcoins" Grid.Row="9" Grid.Column="1" Grid.ColumnSpan="3" VerticalAlignment="Center"/>
        <Label Grid.Row="1" Margin="5,0,0,0" Grid.Column="4" Content="Inventory"/>
        <Label Grid.Row="1" Margin="5,0,0,0" Grid.Column="5" Content="Pets"/>
        <ListBox x:Name="EquipList" Margin="5,0,0,0" Grid.Row="2" Grid.RowSpan="8" Grid.Column="4"/>
        <ListBox x:Name="PetList" Margin="5,0,0,0" Grid.Row="2" Grid.RowSpan="8" Grid.Column="5"/>
        <Grid Margin="5,5,0,5" Grid.Row="10" Grid.Column="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <ComboBox x:Name="ItemToAdd" VerticalAlignment="Center"/>
            <Button x:Name="AddItem" Margin="5,0,0,0" VerticalAlignment="Center" Grid.Column="1" Content="➕"/>
            <Button x:Name="RemoveItem" Margin="5,0,0,0" VerticalAlignment="Center" Grid.Column="2" Content="➖"/>
        </Grid>
        <Grid Margin="5,5,0,5" Grid.Row="10" Grid.Column="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <ComboBox x:Name="PetToAdd" VerticalAlignment="Center"/>
            <Button x:Name="AddPet" Margin="5,0,0,0" VerticalAlignment="Center" Grid.Column="1" Content="➕"/>
            <Button x:Name="RemovePet" Margin="5,0,0,0" VerticalAlignment="Center" Grid.Column="2" Content="➖"/>
        </Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="12" Grid.Column="4" Grid.ColumnSpan="2">
            <Button x:Name="EditButton" Content="Edit" Width="75"/>
            <Button x:Name="CloseButton" Margin="5,0,0,0" Content="Close" Width="75"/>
        </StackPanel>
    </Grid>
</Window>
